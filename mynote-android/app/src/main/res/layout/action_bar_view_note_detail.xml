<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize">

    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/option_btns">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?actionBarItemBackground"
            android:ellipsize="end"
            android:gravity="center|left"
            android:singleLine="true"
            android:textColor="?colorAccent"
            android:textSize="20.0sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/option_btns"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.xuyazhou.mynote.common.widget.IconTextView
            android:id="@+id/ic_attachment"
            style="?action_bar_button_svg"
            android:text="@string/ic_svg_attachment" />

        <com.xuyazhou.mynote.common.widget.IconTextView
            android:id="@+id/ic_camera"
            style="?action_bar_button_svg"
            android:text="@string/ic_svg_camera" />
    </LinearLayout>
</RelativeLayout>