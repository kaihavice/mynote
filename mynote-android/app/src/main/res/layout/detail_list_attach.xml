<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_bottom_detail_attach"
    android:layout_marginLeft="@dimen/detail_attachment_horizontal_padding"
    android:layout_marginRight="@dimen/detail_attachment_horizontal_padding">

    <android.support.v7.widget.CardView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_attachment_other_view_height"
        app:cardBackgroundColor="?bg_color_attachment_other"
        app:cardCornerRadius="@dimen/detail_attachment_corner_radius"
        app:cardElevation="0.0dip">

        <RelativeLayout
            android:id="@+id/attach_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/file_image"
                android:layout_width="38.0dp"
                android:layout_height="38.0dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="8.0dp"
                android:layout_marginRight="8.0dp"
                android:src="@mipmap/ic_attach_file" />

            <include
                android:id="@+id/attachment_file_name_layout"
                layout="@layout/list_item_attach_detail_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/file_image" />
        </RelativeLayout>

        <include
            android:id="@+id/attach_play_layout"
            layout="@layout/list_item_radio_play_layout" />
    </android.support.v7.widget.CardView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?bg_detail_attach" />
</FrameLayout>